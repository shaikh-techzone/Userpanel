<div class="container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s">
  <div class="container">
    <div class="row gy-5 gx-4">
      <input type="hidden" name="id" value="<%= college._id%>" />
      <div class="col-lg-8">
        <div class="d-flex align-items-center mb-5">
          <div class="text-start ps-4">
            <h3 class="mb-3"><%= college.name%></h3>
            <span class="text-truncate me-3"><i class="fa fa-map-marker-alt text-primary me-2"></i>
              <%= college.city%> , <%= college.country%>
            </span>
            <span class="text-truncate me-3"><i class="fas fa-percentage text-primary me-2"></i>
              <%= college.minimum_percent%>
            </span>
            <span class="text-truncate me-0"><i class="fas fa-university text-primary me-2"></i>
              <%= college.type%>
            </span>
          </div>
        </div>

        <div class="">
          <h4 class="mb-4">Apply For The college</h4>
          <form>
            <div class="row g-3">
              <div class="col-12 col-sm-6">
                <input type="text" class="form-control" placeholder="Your Name" />
              </div>
              <div class="col-12 col-sm-6">
                <input type="email" class="form-control" placeholder="Your Email" />
              </div>
              <div class="col-12 col-sm-6">
                <input type="text" class="form-control" placeholder="Portfolio Website" />
              </div>
              <div class="col-12 col-sm-6">
                <input type="file" class="form-control bg-white" />
              </div>
              <div class="col-12">
                <textarea class="form-control" rows="5" placeholder="Coverletter"></textarea>
              </div>
              <div class="col-12">
                <button class="btn btn-primary w-100" type="submit">
                  Apply Now
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>

      <div class="col-lg-4">
        <div class="bg-light rounded p-5 mb-4 wow slideInUp" data-wow-delay="0.1s">
          <h4 class="mb-4">college Summary</h4>
          <p>
            <i class="fa fa-angle-right text-primary me-2"></i>Published On: 01
            Jan, 2045
          </p>
          <p>
            <i class="fa fa-angle-right text-primary me-2"></i>Available Seats:
            <%= college.seats%>
          </p>
          <p>
            <i class="fa fa-angle-right text-primary me-2"></i>College Type: <%=
            college.type%>
          </p>
          <p>
            <i class="fa fa-angle-right text-primary me-2"></i>Minimum
            Percentage: <%= college.minimum_percent%>
          </p>
          <p>
            <i class="fa fa-angle-right text-primary me-2"></i>Eligibility: <%=
            college.eligibility%>
          </p>
          <p class="m-0">
            <i class="fa fa-angle-right text-primary me-2"></i>Date Line: 01
            Jan, 2045
          </p>
        </div>
        <div class="bg-light rounded p-5 wow slideInUp" data-wow-delay="0.1s">
          <h4 class="mb-4">College Detail</h4>
          <p class="m-0"><%= college.about_college%></p>
        </div>
      </div>
    </div>
  </div>
</div>