<div class="container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s">
  <div class="container">
    <div class="row gy-5 gx-4">

      <div class="col-lg-8">
        <div class="d-flex align-items-center mb-5">

          <div class="text-start ps-4">
            <h3 class="mb-3">
              <%= internships.title%>
            </h3>
            <span class="text-truncate me-3"><i class="fa fa-map-marker-alt text-primary me-2"></i>
              <%= internships.location%>
            </span>
            <span class="text-truncate me-3"><i class="far fa-clock text-primary me-2"></i>
              <%= internships.internship_nature%>
            </span>
            <span class="text-truncate me-0"><i class="far fa-money-bill-alt text-primary me-2"></i>
              <%= internships.salary_range%>
            </span>
          </div>
        </div>

        <div class="mb-5">
          <h4 class="mb-3">Internship Description</h4>
          <p>
            <%= internships.internship_desc%>
          </p>
          <h4 class="mb-3">Responsibility</h4>
          <p>
            <%= internships.responsibility%>
          </p>

          <h4 class="mb-3">Qualifications</h4>
          <p>
            <%= internships.qualification%>
          </p>


        </div>

        <div class="">
          <h4 class="mb-4">Apply For The Internship</h4>
          <form>
            <div class="row g-3">
              <div class="col-12 col-sm-6">
                <input type="text" class="form-control" placeholder="Your Name" />
              </div>
              <div class="col-12 col-sm-6">
                <input type="email" class="form-control" placeholder="Your Email" />
              </div>
              <div class="col-12 col-sm-6">
                <input type="text" class="form-control" placeholder="Portfolio Website" />
              </div>
              <div class="col-12 col-sm-6">
                <input type="file" class="form-control bg-white" />
              </div>
              <div class="col-12">
                <textarea class="form-control" rows="5" placeholder="Coverletter"></textarea>
              </div>
              <div class="col-12">
                <button class="btn btn-primary w-100" type="submit">
                  Apply Now
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>

      <div class="col-lg-4">
        <div class="bg-light rounded p-5 mb-4 wow slideInUp" data-wow-delay="0.1s">
          <h4 class="mb-4">Internship Summary</h4>
          <p>
            <i class="fa fa-angle-right text-primary me-2"></i>Published On: <%= internships.createdAt.getDate() %>-<%= internships.createdAt.getMonth()+1 %>-<%=internships.createdAt.getFullYear() %>
          </p>
          <p>
            <i class="fa fa-angle-right text-primary me-2"></i>Vacancy: <%= internships.vacancy%>
          </p>
          <p>
            <i class="fa fa-angle-right text-primary me-2"></i>Internship Nature: <%= internships.internship_nature%>
          </p>
          <p>
            <i class="fa fa-angle-right text-primary me-2"></i>Salary: <%= internships.salary_range%>
          </p>
          <p>
            <i class="fa fa-angle-right text-primary me-2"></i>Location: <%= internships.location%>
          </p>
          <p class="m-0">
            <i class="fa fa-angle-right text-primary me-2"></i>Date Line: <%= internships.deadline%>
          </p>
        </div>
        <div class="bg-light rounded p-5 wow slideInUp" data-wow-delay="0.1s">
          <h4 class="mb-4">Internship Detail</h4>
          <p class="m-0">
            <%= internships.company_detail%>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>